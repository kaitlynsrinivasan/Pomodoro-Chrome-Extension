{
    "manifest_version": 3, 
    "name": "Pomodoro Extension",
    "version": "1.0",
    "description": "a timer",
    "icons": {
        "64": "assets/icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "64":"assets/icon.png"
        }
    },

    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["activeTab", "alarms", "notifications", "storage", "tabs", "scripting"]
}